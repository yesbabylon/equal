{
    "name": "Receivable",
    "description": "Default form for Receivable.",
    "actions": [
        {
            "id": "action.invoice",
            "label": "Invoice",
            "description": "Create a new invoice line from the receivable.",
            "controller": "sale_receivable_invoice",
            "visible": ["status", "=", "pending"]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "66%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "label": "Customer",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "receivables_queue_id",
                                                "label": "Receivable queue",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date",
                                                "label": "Date",
                                                "width": "33%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "33%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "price",
                                                "label": "Total inc. VAT",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "invoice_id",
                                                "label": "Invoice",
                                                "width": "50%",
                                                "visible": ["status", "=", "invoiced"],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.sale",
                        "label": "Sale",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_id",
                                                "label": "Product (Catalog)",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "price_id",
                                                "label": "Price",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "unit_price",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Quantity",
                                                "value": "qty",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Total ex. VAT",
                                                "value": "total",
                                                "width": "33%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Free Quantity",
                                                "value": "free_qty",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Discount",
                                                "value": "discount",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "75%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "vat_rate",
                                                "width": "25%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "sale_entry_class",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "label": "Sale entry",
                                                "value": "sale_entry_id",
                                                "width": "25%",
                                                "visible": ["sale_entry_class", "=", "sale\\SaleEntry"]
                                            },
                                            {
                                                "type": "field",
                                                "label": "Sale entry",
                                                "value": "time_entry_id",
                                                "width": "25%",
                                                "visible": ["sale_entry_class", "=", "timetrack\\TimeEntry"]
                                            },
                                            {
                                                "type": "field",
                                                "label": "Sale entry",
                                                "value": "subscription_entry_id",
                                                "width": "25%",
                                                "visible": ["sale_entry_class", "=", "sale\\subscription\\SubscriptionEntry"]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.description",
                        "label": "Description",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}