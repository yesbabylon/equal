{
    "name": "Customer",
    "description": "Form holding basic information about a customer (Partner).",
    "access": {
        "groups": ["sale.default.user"]
    },
    "layout": {
        "extends": {
            "entity": "identity\\Partner",
            "view": "form.default"
        },
        "remove": [
            "group.partner_info"
        ],
        "update": {
            "section.identity_info": {
                "after": [
                    {
                        "id": "section.customer",
                        "label": "Customer specifics",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Customer Nature",
                                                "value": "customer_nature_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer Type",
                                                "value": "customer_type_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Fare class",
                                                "value": "rate_class_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_external_ref",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "ref_account",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_tour_operator",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.invoices",
                        "label": "Invoices",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.default",
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    }
}
