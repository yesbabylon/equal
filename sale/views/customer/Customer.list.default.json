{
    "name": "Customers",
    "description": "This view is intended for displaying basic listing of existing Customers.",
    "controller": "sale_customer_customer-collect",
    "access": {
        "groups": ["sale.default.user"]
    },
    "header": {
        "actions": {
            "ACTION.CREATE" : [
                {
                    "view": "form.create",
                    "description": "Simplified form to ease creation."
                }
            ]
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "25%"
            },
            {
                "type": "field",
                "label": "Address",
                "value": "address",
                "width": "35%"
            },
            {
                "type": "field",
                "label": "Nature",
                "value": "customer_nature_id",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Type",
                "value": "customer_type_id",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Rate class",
                "value": "rate_class_id",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Lang",
                "value": "lang_id",
                "width": "10%"
            }
        ]
    }
}