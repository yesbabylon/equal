{
    "name": "Customer",
    "description": "This form holds the fields for creating a new Customer.",
    "access": {
        "groups": ["inventory.default.user"]
    },
    "layout": {
        "extends": {
            "entity": "identity\\Partner",
            "view": "form.create"
        },
        "remove": [
            "group.partner_info"
        ],
        "update": {
            "section.identity_info": {
                "after": [
                    {
                        "id": "section.customer",
                        "label": "Customer specifics",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Customer Nature",
                                                "value": "customer_nature_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer Type",
                                                "value": "customer_type_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Fare class",
                                                "value": "rate_class_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_external_ref",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "ref_account",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_tour_operator",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.advanced",
                        "label": "Advanced",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "is_internal",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Owner Identity",
                                                "value": "owner_identity_id",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Identity of Customer",
                                                "value": "partner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Partner Organisation",
                                                "value": "organisation_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    }
}
