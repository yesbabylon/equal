{
    "name": "Invoices",
    "description": "This view is intended for displaying the invoices.",
    "access": {
        "groups": ["finance.default.users"]
    },
    "controller": "finance_accounting_invoice-collect",
    "header": {
        "actions": {
            "ACTION.CREATE": false
        }
    },
    "operations": {
        "total": {
            "total": {
                "operation": "SUM",
                "usage": "amount/money:2"
            },
            "price": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "limit": 100,
    "layout": {
        "items": [
            {
                "id": "item.name",
                "type": "field",
                "value": "name",
                "width": "20%"
            },
            {
                "id": "item.emission.date",
                "type": "field",
                "value": "emission_date",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "status",
                "width": "20%"
            },
            {
                "id": "item.invoice_purpose",
                "type": "field",
                "value": "invoice_purpose",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "total",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "price",
                "width": "15%"
            }
        ]
    }
}