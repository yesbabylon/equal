{
    "name": "Invoice Lines",
    "description": "This view is intended for displaying the invoice lines.",
    "access": {
        "groups": ["finance.default.users"]
    },
    "group_by": [
        {
            "field": "invoice_line_group_id",
            "open": true
        }
    ],
    "operations": {
        "total": {
            "price": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "limit": 100,
    "layout": {
        "items": [
            {
                "id": "item.name",
                "type": "field",
                "value": "name",
                "width": "25%"
            },
            {
                "id": "item.group",
                "type": "field",
                "label": "Group",
                "value": "invoice_line_group_id",
                "width": "25%"
            },
            {
                "type": "field",
                "value": "unit_price",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Quantity",
                "value": "qty",
                "width": "10%"
            },
            {
                "type": "field",
                "label": "Free qty",
                "value": "free_qty",
                "width": "10%"
            },
            {
                "type": "field",
                "label": "Disc.%",
                "value": "discount",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "vat_rate",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "total",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "price",
                "width": "15%"
            }
        ]
    }
}
