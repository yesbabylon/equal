{
    "name": "Customers",
    "description": "This view is intended for displaying basic listing of existing Customers.",
    "controller": "inventory_sale_customer_customer-collect",
    "access": {
        "groups": [
            "sale.default.user",
            "booking.default.user"
        ]
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "15%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "name",
                "width": "25%"
            },
            {
                "type": "field",
                "label": "Address",
                "value": "address",
                "width": "35%"
            },
            {
                "type": "field",
                "label": "Type",
                "value": "customer_nature_id",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Type",
                "value": "customer_type_id",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Rate class",
                "value": "rate_class_id",
                "width": "15%"
            }
        ]
    }
}