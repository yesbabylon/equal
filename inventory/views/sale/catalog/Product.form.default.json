{
    "name": "Product Catalog",
    "description": "A Product is a variant of a Product Model. There is always at least one Product for a given Product Model.",
    "access": {
        "groups": [
            "pos.default.user",
            "sale.default.user"
        ]
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.products_Section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "label",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "sku",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Product Model",
                                                "value": "product_model_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "can_sell",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Prices",
                        "id": "section.prices_section",
                        "visible": [
                            [
                                [
                                    "is_pack",
                                    "=",
                                    false
                                ],
                                [
                                    "state",
                                    "<>",
                                    "draft"
                                ]
                            ],
                            [
                                [
                                    "has_own_price",
                                    "=",
                                    true
                                ],
                                [
                                    "state",
                                    "<>",
                                    "draft"
                                ]
                            ]
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "prices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": [
                                                        "is_active",
                                                        "=",
                                                        true
                                                    ]
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Attributes",
                        "id": "section.attributes",
                        "visible": [
                            "state",
                            "<>",
                            "draft"
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_attributes_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.product"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Groups",
                        "id": "section.groups",
                        "visible": [
                            "state",
                            "<>",
                            "draft"
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "groups_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Pack Products",
                        "id": "section.pack_lines",
                        "visible": [
                            [
                                "is_pack",
                                "=",
                                true
                            ],
                            [
                                "state",
                                "<>",
                                "draft"
                            ]
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "pack_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Subscriptions",
                        "id": "section.attributes",
                        "visible": [
                            "state",
                            "<>",
                            "draft"
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "subscriptions_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.default"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}