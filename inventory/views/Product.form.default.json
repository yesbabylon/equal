{
    "name": "Product",
    "description": "Default form for Product",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "Infos Product",
                        "id": "section.product",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "75%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Internal",
                                                "value": "is_internal",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "label": "Customer",
                                                "width": "25%",
                                                "header": {
                                                    "view": "form.inventory",
                                                    "actions": {
                                                        "ACTION.CREATE": [
                                                            {
                                                                "view": "form.create"
                                                            }
                                                        ]
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Description",
                                                "value": "description",
                                                "width": "50%",
                                                "widget": {
                                                    "usage": "text/plain"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Servers",
                        "id": "section.product.servers",
                        "visible": [
                            "state",
                            "<>",
                            "draft"
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "servers_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.selection",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Services",
                        "id": "section.product.services",
                        "visible": [
                            "state",
                            "<>",
                            "draft"
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "services_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.selection",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}