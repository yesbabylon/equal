{
    "name": "Product",
    "description": "Default form for Product",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "Infos Product",
                        "id": "section.product_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "75%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Is Internal",
                                                "value": "is_internal",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "label": "Customer",
                                                "width": "25%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Description",
                                                "value": "description",
                                                "width": "50%",
                                                "widget": {
                                                    "usage": "string/text"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Servers",
                        "id": "section.product_servers",
                        "visible": [
                            "state",
                            "<>",
                            "draft"
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "servers_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.selection"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Services",
                        "id": "section.product_services",
                        "visible": [
                            "state",
                            "<>",
                            "draft"
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "services_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.selection"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}