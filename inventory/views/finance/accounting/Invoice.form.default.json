{
    "name": "Invoice",
    "description": "An invoice is a legal document issued by a seller to a buyer that relates to a sale, and is part of the accounting system.",
    "access": {
        "groups": [
            "finance.default.user",
            "sale.default.user"
        ]
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "number",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Partner",
                                                "value": "partner_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "due_date",
                                                "width": "25%",
                                                "visible": [
                                                    "status",
                                                    "<>",
                                                    "cancelled"
                                                ]
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_paid",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "reversed_invoice_id",
                                                "width": "33%",
                                                "visible": [
                                                    "status",
                                                    "=",
                                                    "cancelled"
                                                ]
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_ref",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Organisation",
                                                "value": "organisation_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "sections.invoice.lines",
                        "label": "Invoice Lines",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoice_lines_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "sections.invoice.entries",
                        "label": "Accounting entries",
                        "visible": [
                            "status",
                            "<>",
                            "proforma"
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "accounting_entries_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.invoice",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}